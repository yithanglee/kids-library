<%= form_for(Loan.new) do |f| %>
 
  <div class="field">
    <%= f.label :loan_date %>
    <%= f.date_select :loan_date %>
  </div>

  <div class="field">
    <%= f.label :return_date %>
    <%= f.date_select :return_date, selected: 7.days.from_now %>
  </div>

  <div class="field">
    <%= f.label :book_id %>
    <% if @book == nil %>
        <p>No Book Found</p>
    <% else %>

    <%= f.hidden_field :book_id, :value => Book.find(@book).id %>
    <%= Book.find(@book).name %>
    <% end %>
</div>

  <div class="field">
    <%= f.label :user_id %>
    <% if  !User.find_by(member_id: params[:user]).nil? %>
      <%= User.find_by(member_id: params[:user]).name %>,  <%= User.find_by(member_id: params[:user]).member_id %>
      <%= f.hidden_field :user_id, :value => User.find_by(member_id: params[:user]).id %>
    <% else %>
      <p>No User Found</p>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit 'Create loan', :class => 'btn btn-default' %>
  </div>
<% end %>
