<% if loan.estimate_fine == 0 %>
  <tr>
    <td><%= loan.loan_date %></td>
    <td><%= loan.return_date %></td>
    <td><%= loan.book.name %></td>
    <td><%= link_to loan.user.name, user_path(loan.user)%></td> 
    <% if current_user.is_admin? %>
      <td><%= link_to 'Edit', edit_loan_path(loan), :class => 'btn btn-default' %></td>
      <td>
        <% if loan.has_returned == false%>
        <%= link_to 'Return', book_return_path(:id => loan.id), :class => 'btn btn-success' %>
        <% end %>

        <% if loan.is_extended == false%>
        <%= link_to 'Extend', return_date_extend_path(:id => loan.id), :class => 'btn btn-primary' %>
        <% end %>
      </td>
      <td>RM <span id="fines"><%= ('%.2f' % loan.estimate_fine) %></span></td>

    <% end %>
  </tr>
<% else %>
  <tr style="color:red;">
    <td><%= loan.loan_date %></td>
    <td><%= loan.return_date %></td>
    <td><%= loan.book.name %></td>
    <td><%= link_to loan.user.name, user_path(loan.user)%></td> 
    <% if current_user.is_admin? %>
      <td><%= link_to 'Edit', edit_loan_path(loan), :class => 'btn btn-default' %></td>
      <td>
        <% if loan.has_returned == false%>
        <%= link_to 'Return', book_return_path(:id => loan.id), :class => 'btn btn-success' %>
        <% end %>

        <% if loan.is_extended == false%>
        <%= link_to 'Extend', return_date_extend_path(:id => loan.id), :class => 'btn btn-primary' %>
        <% end %>
      </td>
      <td>RM <span id="fines"><%= ('%.2f' % loan.estimate_fine) %></span></td>

    <% end %>
  </tr>
<% end %>