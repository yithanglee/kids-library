<% @authors.each do |author| %>
  <tr>
    <td><%= author.name %></td>
    <td><%= link_to 'Show', [author.publisher, author] %></td>
    <td><%= link_to 'Edit', edit_publisher_author_path(author.publisher, author) %></td>
    <td><%= link_to 'Destroy', [author.publisher, author], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

