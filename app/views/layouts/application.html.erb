<!DOCTYPE html>
<html>
  <head>
    <title>KidsLibrary</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Brand</a>
      <ul class="nav navbar-nav">
       <li> <%= link_to "home", root_url %></li>
       <li> <%= link_to "users", users_url %></li>
       <li> <%= link_to "books", books_url %></li>
       <li> <%= link_to "loans", loans_url %></li>
    	 <li> <%= link_to "help", '/staticpages/help' %></li>
      </ul>
  </div>
  <div class="container-fluid">
     <ul class="nav navbar-nav navbar-left">
        <%= form_for Book.new, method: :get, url: search_path do |f| %>
        <%= text_field_tag :user, params[:user], placeholder: "Member ID", :onkeyup => 'countMemberId(this)' %>
        <%= text_field_tag :term, params[:term], placeholder:"ISBN quick find", :onkeyup => 'countChar(this)', id: 'isbn' %>
        <%= f.submit 'search', class: 'btn btn-primary', id: 'submit' %>
        <% end %>
     </ul>
  </div>
  </br>
</nav>
  <body>
    <div class="container">
      <div id="flash">
        <% flash.each do |key, value| %>
            <% if key = notice %>
              <div class="alert alert-success" role="alert"><div class="flash <%= key %>"><%= value %></div></div>
            <% elsif key = alert %>
              <div class="alert alert-danger" role="alert"><div class="flash <%= key %>"><%= value %></div></div>
            <%end %>
        <% end %>
      </div>
    </div>
    <%= yield %>
    <footer>

     </footer>
  </body>
</html>
