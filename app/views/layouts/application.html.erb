<!DOCTYPE html>
<html>
  <head>
    <title>KidsLibrary</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
    <a class="navbar-brand" href="<%= root_path%>">亮亮儿童图书馆 Shining Kid's Library</a>
    </div>
      <ul class="nav navbar-nav navbar-left">
      
       <li> <%= link_to "home", root_url %></li>
       <li> <%= link_to "users", users_url %></li>
       <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Books 
          <span class="caret"></span></a>
            <ul class="dropdown-menu">
            <li><%= link_to 'Picture Books', :action => 'list_by_category', :controller => '/books', :category => '1' %></li>
            <li><%= link_to 'English Books', :action => 'list_by_category', :controller => '/books', :category => '2' %></li>
            <li><%= link_to 'Teaching Books', :action => 'list_by_category', :controller => '/books', :category => '3' %></li>
            <li><%= link_to 'Religion Books', :action => 'list_by_category', :controller => '/books', :category => '4' %></li>
            <li><%= link_to 'Other Books', :action => 'list_by_category', :controller => '/books', :category => '5' %></li>
            </ul>
       </li>
       <li> <%= link_to "loans", loans_url %></li>
       <li> <%= link_to "help", '/staticpages/help' %></li>
       <% if !current_user.nil? and current_user.is_admin? %>  
         <li>
          <%= form_for Book.new, :url => url_for(:controller => '/books', :action => 'quick_loan'), :method => 'get', html: { class: "navbar-form navbar-left"} do |f| %>
            <%= text_field_tag :user, params[:user], placeholder: "Member ID", :onkeyup => 'countMemberId(this)' %>
            <%= text_field_tag :term, params[:term], placeholder:"ISBN quick find", :onkeyup => 'countChar(this)', id: 'isbn' %>
            <%= f.submit 'Quick loan', class: 'btn btn-warning', id: 'submit' %>
          <% end %>         
         </li>
        <% end %> 
        <li><%= form_for Book.new, :url => url_for(:controller => '/books', :action => 'search'), :method => 'get', html: { class: "navbar-form navbar-left"} do |f| %>
          <%= text_field_tag :book_name, params[:book_name], placeholder:"Book name" %>
          <%= text_field_tag :author, params[:author], placeholder:"Author name" %>        
          <%= f.submit 'search', class: 'btn btn-primary', id: 'submit' %>
        <% end %></li>
        <li><% if signed_in? %>
          <%= current_user.email %>
          <%= button_to "Sign out", sign_out_path, method: :delete %>
          <% else %>
          <%= link_to "Sign in", sign_in_path %>
        <% end %></li>
      </ul>
  </div>
</nav>
  <body>
    <%= image_tag('background.jpg', :class => "background")%>
    <div class="container">
    <center>
      
      <div id="flash">
        <% flash.each do |key, value| %>
            <% if key = notice %>
              <div class="alert alert-success" role="alert"><div class="flash <%= key %>"><%= value %></div></div>
            <% elsif key = alert %>
              <div class="alert alert-danger" role="alert"><div class="flash <%= key %>"><%= value %></div></div>
            <%end %>
        <% end %>
      </div>
    </div>
    </center>
    <%= yield %>
    <footer>

     </footer>
  </body>
</html>
