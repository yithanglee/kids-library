<div class="container-fluid">
	<div class="row">
		<div class="col-lg-8">
			<div class="panel panel-default">
			<div class="panel-heading"><h1>Creating loan for "<%= @book.name %>"</h1></div>
  				<div class="panel-body">
  				<div class="container-fluid">
					<p>
					  <b>Isbn:</b>
					  <%= @book.isbn %>
					</p>

					<p>
					  <b>Barcode:</b>
					  <%= @book.barcode %>
					</p>

					<ul>
						<% @book.categories.each do |x|%>
							<li><%= x.name%></li>
						<%end%>
					</ul>  					
  				</div>

				    <div class="panel-body">
  					<% if @book.loans.empty? %>
					<%= render 'loans/form_quick' %>
					<% else %>
					<p>This book has been loaned, the expected return date is <strong><%=@book.loans.last.return_date %></strong></p>
					<% end %>
					</div>
				</div>
			</div>
		</div>	
	</div>
</div>
			
<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>
