<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :isbn %><br />
    <%= f.text_field :isbn %>
  </div>
  <div class="field">
    <%= f.label :barcode %><br />
    <%= f.text_field :barcode %>
  </div>

<% @categories.each do |x| %>
              <li>
                <%= x.name %> 
              
                  <% if @book.categories.all.pluck(:name).include?(x.name) %>
                    <%= check_box("book", "categories", {:multiple =>true, :checked => true }, x.name, nil) %>
                  <% else %>
                    <%= check_box("book", "categories", {:multiple =>true }, x.name, nil) %>
                  <% end %>
              </li>
<% end %> 


<%= f.select :authors, Author.all.collect {|p| [ p.name, p.id ] }%>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
