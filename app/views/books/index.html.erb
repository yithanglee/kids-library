	<div class="row">
		<% if current_user == nil || !current_user.is_admin? %>
			<div class="col-lg-12">
					<div class="panel panel-default">
					<div class="panel-heading" style="font-size:30px;">List of <%= params[:category].nil? ? "all" : Category.find(params[:category]).name %> books 
					</div>
					<div class="panel-heading" style="font-size:15px; float:right; text-transform: underline;">
												
						<%= link_to 'Picture Books', :action => 'list_by_category', :controller => '/books', :category => '1' %> |
            <%= link_to 'English Books', :action => 'list_by_category', :controller => '/books', :category => '2' %> |
            <%= link_to 'Teaching Books', :action => 'list_by_category', :controller => '/books', :category => '3' %> |
            <%= link_to 'Religion Books', :action => 'list_by_category', :controller => '/books', :category => '4' %> |
            <%= link_to 'Other Books', :action => 'list_by_category', :controller => '/books', :category => '5' %>
				
					</div>
		  				<div class="panel-body">
		  					<%= render @books %>
						</div>
							<div class="pagination_light"><%= will_paginate @books%></div>
					</div>
			</div>

		<% elsif current_user.is_admin?  %>
				<div class="col-lg-8">
					<div class="panel panel-default">
					  <div class="panel-heading"><h1>List of books</h1></div>
		  				<div class="panel-body">
							<table class="table" style="font-size:18px;">
							  <col width="250">
							  <tr>
							    <th>Name</th>
							    <th>Barcode</th>
							    <th>Author</th>
							    <th>Loaned?</th>
							    <th>Updated</th>
							    <th>Action</th>
							  </tr>
							<%= render @books %>
							</table>
							<%= will_paginate @books %>
						</div>
					</div>
				</div>

				<div class="col-lg-4">
					<div class="panel panel-default">
					<div class="panel-heading"><h1>New book</h1></div>
		  			<div class="panel-body">
							<%= render partial: 'books/form_q'%> 
						</div>
					</div>
				</div>

		<% end %>


	</div>



