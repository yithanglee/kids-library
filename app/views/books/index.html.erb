<h1>Listing books</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Isbn</th>
    <th>Barcode</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.name %></td>
    <td><%= book.category %></td>
    <td><%= book.isbn %></td>
    <td><%= book.barcode %></td>
    <td><%= link_to 'Show', [book.author.publisher, book.author, book] %></td>
    <td><%= link_to 'Edit', edit_publisher_author_book_path(book.author.publisher, book.author, book) %></td>
    <td><%= link_to 'Destroy', [book.author.publisher, book.author, book], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

