<h1>Listing books</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Author</th>
    <th>Isbn</th>
    <th>Barcode</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.name %></td>
    <td>
    <% if book.authors.count == 0 %>

    <% else %>
      <%= book.authors.first.name %>
    <% end %>
    </td>
    <td><%= book.isbn %></td>
    <td><%= book.barcode %></td>
    <td><%= link_to 'Show', book_path(book)  %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy',book_path(book), data: {confirm: 'Are you sure?'} ,:method => :delete %></td>
  </tr>
<% end %>
</table>

