<div class="container-fluid">
	<div class="row">
		<% if current_user == nil || !current_user.is_admin? %>
			<div class="col-lg-12">
					<div class="panel panel-default">
		  				<div style="float:right; margin-top:20px; padding: 5px;">
					        <%= form_for Book.new, :url => url_for(:controller => '/books', :action => 'list_by_category'), :method => 'get', html: { class: "navbar-form navbar-left"} do |f| %>
							<%= select_tag "category", options_from_collection_for_select(Category.all, "id", "name")%>      
					          <%= f.submit 'search', class: 'btn btn-primary', id: 'submit' %>
					        <% end %>						
			  					
		  				</div>
					<div class="panel-heading"><h1>List of books</h1>
					</div>
		  				<div class="panel-body">
		  					<%= render @books %>
						</div>
							<div class="pagination_light"><%= will_paginate @books%></div>
					</div>
			</div>

		<% elsif current_user.is_admin?  %>
				<div class="col-lg-8">
					<div class="panel panel-default">
					  <div class="panel-heading"><h1>List of books</h1></div>
		  				<div class="panel-body">
							<table class="table" style="font-size:18px;">
							  <col width="250">
							  <tr>
							    <th>Name</th>
							    <th>Barcode</th>
							    <th>Author</th>
							    <th>Loaned?</th>
							    <th>Updated</th>
							    <th>Action</th>
							  </tr>
							<%= render @books %>
							</table>
							<%= will_paginate @books %>
						</div>
					</div>
				</div>

				<div class="col-lg-4">
					<div class="panel panel-default">
					<div class="panel-heading"><h1>New book</h1></div>
		  			<div class="panel-body">
							<%= render partial: 'books/form_q'%> 
						</div>
					</div>
				</div>

		<% end %>


	</div>
</div>



