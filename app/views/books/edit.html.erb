<div class="container-fluid">
<div class="row">
	<div class="col-lg-6">
		<div class="panel panel-default">
		  <div class="panel-heading"><div class="container-fluid"><h1><%= @book.name %></h1></div></div>
		  	
		  		<div class="panel-body">
						<%= render 'form' %>							

								<%= link_to 'Back', 'javascript:history.go(-1);', :class => 'btn btn-default' %>
					</div>

		  </div>	
	</div>

	  <div class="col-lg-6">
			<div class="panel panel-default">
		  <div class="panel-heading"><h1>Editing book</h1></div>
		  	<div class="panel-body">
		  		
		  					<% if current_user == nil || !current_user.is_admin? %>
									<% if @book.loans.empty? %>
										<p>This book is <span class="label label-primary">available</span> for loan.</p>
									<% else %>
										<p>This book has been <span class="label label-danger">loaned</span>, the expected return date is <strong><%=@book.loans.last.return_date %></strong></p>
									<% end %>

								<% elsif current_user.is_admin? %>
							    <div class="panel-body" style="border-style:dotted; border-width: 1px; margin-top:5px; margin-bottom:5px;">
				  					<% if @book.loans.empty? %>
										<%= render 'loans/form_quick' %>
										<% else %>
										<p>This book has been <span class="label label-danger">loaned</span>, the expected return date is <strong><%=@book.loans.last.return_date %></strong></p>
										<% end %>
									</div>
								<% end %>		  		
				</div>
			</div>
		</div>
	</div>
</div>


