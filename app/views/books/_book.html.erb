<% if current_user == nil || !current_user.is_admin?%>
  <div class="thumbnail">
    <%= image_tag('shining-kids.jpg', size:'250')%>
    <div class="caption">
    <center>
    <h4><%= book.name %></h4>
        <%if book.loans.count > 0 %>
        <span class="label label-danger">Loaned</span>
        <% else %>
        <span class="label label-primary">Available</span>
        <% end %>
    <p><%= link_to 'Show', book_path(book) , :class => 'btn btn-default' %></p>    
    </center>
    </div>
  </div>

<% elsif current_user.is_admin? %>
  <tr class="list_book">
    <td><%= book.name %></td>
    <td><%= book.barcode %></td>
    <td><%= book.author_1 %>, <%= book.author_2 %></td>
    <%if book.loans.count > 0 %>
      <td> Yes (<%=book.loans.last.user.name%>)</td>
    <% else %>
      <td> No </td>
    <% end %>

    <td style="font-size: 12px;"><%= book.updated_at.in_time_zone("Kuala Lumpur") %></td>

    <td><%= link_to 'Edit', edit_book_path(book, page: params[:page]), :class => "btn btn-default" %></td>

  </tr>

<% end %>