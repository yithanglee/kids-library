
<div class="col-lg-8">
	<div class="panel panel-default">
		<div class="panel-body">
			<div class="well">
				Please key in your new password.
			</div>
				<%= form_for(@user, :html => {:class => 'form-horizontal'}) do |f| %>

				  <div class="form-group">
				    <%= f.label :password, :class => "col-lg-2 control-label"  %>
				    <div class="col-lg-8"> <%= f.text_field :password, :required => 'true', :class => "form-control" %></div>
				  </div>

				  <div class="form-group">
				    <%= f.label 'Retype Password', :class => "col-lg-2 control-label"  %>
				    <div class="col-lg-8"> <%= text_field_tag 'password', nil, :required => 'true', :class => "form-control" %></div>
				  </div>

				    <div class="actions">
				    <%= f.submit 'Submit', :class => "btn btn-default" %>
				    </div>

				 <% end %>
			
		</div>
	</div>
	
</div>
